generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_RENDER")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  messages Message[]

  @@map("users")
}

model Message {
  id          Int      @id @default(autoincrement())
  senderId    Int
  receiverId  Int
  content     String
  timestamp   DateTime @default(now())
  user      User     @relation(fields: [senderId], references: [id])

  @@map("messages")
}